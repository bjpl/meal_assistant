{
  "server": {
    "port": 3000,
    "host": "0.0.0.0"
  },
  "cors": {
    "origin": "*",
    "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
    "allowedHeaders": ["Content-Type", "Authorization"]
  },
  "rateLimit": {
    "windowMs": 900000,
    "max": 100
  },
  "jwt": {
    "expiresIn": "7d"
  },
  "logging": {
    "level": "info",
    "format": "combined"
  },
  "patterns": {
    "dailyCalorieTarget": 1800,
    "dailyProteinTarget": 135
  },
  "inventory": {
    "expiryWarningHours": 48,
    "lowStockThreshold": {
      "protein": 2,
      "carbohydrate": 3,
      "vegetable": 2,
      "fruit": 2,
      "dairy": 1,
      "default": 1
    }
  },
  "shopping": {
    "defaultWeights": {
      "price": 0.4,
      "distance": 0.3,
      "quality": 0.2,
      "time": 0.1
    },
    "maxStores": 5
  },
  "analytics": {
    "defaultTimeframeDays": 30,
    "trendGranularity": "week"
  }
}
