# =============================================================================
# Meal Assistant Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
POSTGRES_DB=meal_assistant
POSTGRES_USER=meal_user
POSTGRES_PASSWORD=change_this_in_production
DATABASE_URL=postgresql://meal_user:change_this_in_production@localhost:5432/meal_assistant

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# ML Service
ML_SERVICE_URL=http://localhost:8000

# External APIs (optional)
GOOGLE_MAPS_API_KEY=
OPENAI_API_KEY=

# Error Tracking (optional)
SENTRY_DSN=

# Monitoring (optional)
PROMETHEUS_ENABLED=false

# Docker Registry (for CI/CD)
REGISTRY=ghcr.io
IMAGE_TAG=latest

# Feature Flags
ENABLE_ML_PREDICTIONS=true
ENABLE_BARCODE_SCANNER=true
ENABLE_PHOTO_RECOGNITION=false

# RuVector Configuration (Vector Database)
RUVECTOR_API_URL=http://localhost:8000
RUVECTOR_API_KEY=your_ruvector_api_key_here
RUVECTOR_TIMEOUT=30000
RUVECTOR_EMBEDDING_MODEL=all-MiniLM-L6-v2
RUVECTOR_CACHE_ENABLED=true
