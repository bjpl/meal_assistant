# Meal Assistant Mobile - Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# API Configuration
# =============================================================================

# Base URL for the backend API
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# API request timeout in milliseconds (default: 30000 = 30 seconds)
EXPO_PUBLIC_API_TIMEOUT=30000

# Maximum retry attempts for failed requests (default: 3)
EXPO_PUBLIC_MAX_RETRIES=3

# Cache TTL in milliseconds (default: 300000 = 5 minutes)
EXPO_PUBLIC_CACHE_TTL=300000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable offline mode with request queuing
EXPO_PUBLIC_FEATURE_OFFLINE_MODE=true

# Enable request caching
EXPO_PUBLIC_FEATURE_CACHING=true

# Enable debug logging
EXPO_PUBLIC_DEBUG_MODE=false

# Enable analytics tracking
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# Enable crash reporting
EXPO_PUBLIC_ENABLE_CRASH_REPORTS=true

# =============================================================================
# Authentication
# =============================================================================

# Auth token refresh threshold in seconds before expiry
EXPO_PUBLIC_TOKEN_REFRESH_THRESHOLD=300

# =============================================================================
# Push Notifications
# =============================================================================

# Expo push notification token
# EXPO_PUBLIC_PUSH_TOKEN=

# =============================================================================
# Third-Party Services
# =============================================================================

# Google Maps API key (for store location features)
# EXPO_PUBLIC_GOOGLE_MAPS_KEY=

# Sentry DSN for error tracking
# EXPO_PUBLIC_SENTRY_DSN=

# =============================================================================
# Development Settings
# =============================================================================

# Enable React Native debugger
EXPO_PUBLIC_ENABLE_DEBUGGER=false

# Mock API responses for development
EXPO_PUBLIC_USE_MOCK_API=false
